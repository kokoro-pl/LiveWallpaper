<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.il.livewallpaper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
      		android:name="com.il.livewallpaper.LiveWallpaperSettings" android:exported="true" > 
		</activity>
        <service android:name="LiveWallpaperService" android:icon="@drawable/icon" 
    android:label="@string/app_name" android:permission="android.permission.BIND_WALLPAPER">
    	<intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
        </intent-filter>
        <meta-data android:name="android.service.wallpaper" android:resource="@xml/wallpaper" />
    </service>
    </application>
    

</manifest>
